<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotesPersistenceSample" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor_800</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor_600</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed">false</item>

        <!-- Navigation button color -->
        <item name="drawerArrowStyle">@style/Arrow</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.NotesApp.LargeComponent</item>

    </style>
</resources>